{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('shop_checkout') }}
{% endblock %}

{% block body %}
    <div class="success-container">
        <h1 class="title">{{ 'order.success.title'|trans }}</h1>
        <div class="success-description">
            <p>{{ 'order.success.mail'|trans}}</p>
            <p>{{ 'order.success.mail_error'|trans }} <a href="mailto:{{ contact_mail }}" class="mail">{{ contact_mail }}</a></p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('shop_checkout') }}
{% endblock %}
