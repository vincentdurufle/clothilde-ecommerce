{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
{% endblock %}

{% block body %}
    <div class="one-page-scroll-container" id="scroll-container">
        <section class="hero-container row no-gutters">
            <div class="hero left">
                <h1 class="name-title">Clotilde <br> Puy</h1>
                <h2 class="hero-description">{{ 'homepage.hero.description'|trans }}</h2>
            </div>
            <div class="right">
                <div class="square">
                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                        <path fill="#FF0066" d="M25.3,-44.1C33.5,-39,41.5,-33.8,47,-26.4C52.6,-19,55.8,-9.5,53.7,-1.2C51.6,7.1,44.1,14.1,39.7,23.6C35.3,33,34,44.8,27.9,57.1C21.8,69.4,10.9,82.2,-1.8,85.3C-14.5,88.5,-29,81.9,-39.1,71.9C-49.1,61.9,-54.7,48.4,-57.5,35.8C-60.2,23.2,-60.2,11.6,-55,3C-49.8,-5.6,-39.5,-11.3,-30.8,-13.4C-22,-15.6,-14.8,-14.3,-9.9,-21.4C-5,-28.4,-2.5,-43.8,3,-49C8.5,-54.2,17,-49.2,25.3,-44.1Z" transform="translate(100 100)" />
                    </svg>
                </div>
            </div>
            <a href="#1" class="arrow-link">
                <i class="fas fa-chevron-down"></i>
            </a>
        </section>
        <section class="last-project-container row no-gutters">
            <div class="left">
                <div class="item">
                    {% if item %}
                        <h2 class="title">{{ 'homepage.latest'|trans }}</h2>
                        <h3 class="item-title">{{ item.name }}</h3>
                        <img src="{{ vich_uploader_asset(item, 'coverFile') | imagine_filter('cover') }}" alt="{{ item.name }}">
                        <a href="{{ path('shop_item_show', {'slug': item.slug}) }}" class="shop-item btn btn-light btn-lg">{{ 'homepage.btn.shop'|trans }}</a>
                    {% endif %}
                </div>
            </div>
            <div class="right">
                <div class="description">
                    <h3>{{ 'homepage.project.description'|trans }}</h3>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('homepage') }}
{% endblock %}
